<?xml version="1.0" encoding="UTF-8" standalone="yes" ?>

<persistence version="3.1" xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence https://jakarta.ee/xml/ns/persistence">

    <persistence-unit name="market">

        <!-- Configure your properties here -->
        <properties>
            <!-- Database Connection Properties -->

            <property name="javax.persistence.jdbc.url" value="jdbc:postgresql://localhost:5432/market"/>
            <property name="javax.persistence.jdbc.user" value="postgres"/>
            <property name="javax.persistence.jdbc.password" value="postgres"/>
            <property name="hibernate.show_sql" value="true"/>
            <property name="hibernate.hbm2ddl.auto" value="update"/>

            <!-- JPA Provider Settings -->
            <property name="jakarta.persistence.jdbc.driver" value="org.postgresql.Driver"/>


            <!-- Other properties -->
            <!-- ... -->
        </properties>

    </persistence-unit>

</persistence>
